<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNumberItemListMCP"
        style="@style/ListMCP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/whiteManageAccount"
        android:text="1" />

    <TextView
        android:id="@+id/tvLocationListMCP"
        style="@style/ListMCP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="38/17 Dinh Tien Hoang" />

    <ImageButton
        android:id="@+id/ibChooseListMCP"
        style="@style/ListMCP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_weight="2"
        android:background="@drawable/no_sharp_corner_white_color"
        android:src="@drawable/choose" />

</LinearLayout>