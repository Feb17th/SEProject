<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvNumberItemManageTask"
        style="@style/itemManageTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/whiteManageAccount"
        android:text="1" />

    <TextView
        android:id="@+id/tvDescriptionItemManageTask"
        style="@style/itemManageTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="left"
        android:text="Dọn rác buổi sáng tại Suối Tiên" />

    <TextView
        android:id="@+id/tvStatusItemManageTask"
        style="@style/itemManageTask"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="D" />

    <Button
        android:id="@+id/btnDetailsItemManageTask"
        style="@style/itemManageTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/marginEndManageTask"
        android:layout_weight="2"
        android:background="@android:color/white"
        android:text="Details"
        android:textColor="@color/greenDetailsItemManageTask" />

</LinearLayout>